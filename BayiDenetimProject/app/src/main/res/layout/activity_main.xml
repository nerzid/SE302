<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <VideoView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/backgroundVideoView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ÇOK BEĞENDİM"
        android:id="@+id/answer3"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignTop="@+id/answer2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/green_button"
        android:clickable="true"
        android:onClick="onClick_Answer3"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEKANIMIZI BEĞENDİNİZ Mİ ?"
        android:id="@+id/question"
        android:textSize="80dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="#fffcffff"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HİÇ BEĞENMEDİM"
        android:id="@+id/answer1"
        android:textSize="50dp"
        android:textAlignment="center"
        android:background="@drawable/red_button"
        android:layout_alignTop="@+id/answer2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:clickable="true"
        android:onClick="onClick_Answer1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EH İŞTE"
        android:id="@+id/answer2"
        android:textSize="50dp"
        android:textAlignment="center"
        android:background="@drawable/yellow_button"
        android:layout_marginRight="87dp"
        android:layout_marginEnd="87dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/answer3"
        android:layout_toStartOf="@+id/answer3"
        android:clickable="true"
        android:onClick="onClick_Answer2"
        />
</RelativeLayout>
